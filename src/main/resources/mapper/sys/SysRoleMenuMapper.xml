<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.sys.dao.SysRoleMenuDao">

    <!-- 基于菜单id删除关系表中的关系数据 -->
    <delete id="deleteObjectsByMenuId">
       delete from jtsys. sys_role_menus
       where menu_id=#{id}
  </delete>
    
    <delete id="deleteObjectsByRoleId" parameterType="int">
        delete from jtsys.sys_role_menus where role_id=#{id}
    </delete>
    <insert id="insertObject">
        insert into jtsys.sys_role_menus(role_id, menu_id)
        VALUES <foreach collection="menuIds"
                        separator=","
                        item="item">
        (#{roleId},#{item})
    </foreach>
    </insert>

</mapper>








